<bpel:process name="SimpleHomeLoan"
         targetNamespace="http://soacourse.unsw.edu.au/loanapproval"
         suppressJoinFailure="yes"
         xmlns:tns="http://soacourse.unsw.edu.au/loanapproval"
         xmlns:ns1="http://soacourse.unsw.edu.au/loanapprover"
         xmlns:bpel="http://docs.oasis-open.org/wsbpel/2.0/process/executable"
         >

    <!-- Import the client WSDL -->
	<bpel:import location="SimpleHomeLoanArtifacts.wsdl" namespace="http://soacourse.unsw.edu.au/loanapproval" 
	        importType="http://schemas.xmlsoap.org/wsdl/" />
    <bpel:import namespace="http://soacourse.unsw.edu.au/loanapprover" location="loanapprover.wsdl"
	        importType="http://schemas.xmlsoap.org/wsdl/" />     
    <!-- ================================================================= -->         
    <!-- PARTNERLINKS                                                      -->
    <!-- List of services participating in this BPEL process               -->
    <!-- ================================================================= -->         
    <bpel:partnerLinks>
        <!-- The 'client' role represents the requester of this service. -->
        <bpel:partnerLink name="client"
                     partnerLinkType="tns:loanApprovalLinkType"
                     myRole="approver"
                     />
        <bpel:partnerLink name="approver"
                     partnerLinkType="tns:loanApprovalLinkType"
                     partnerRole="approver"
                     />
    </bpel:partnerLinks>
  
    <!-- ================================================================= -->         
    <!-- VARIABLES                                                         -->
    <!-- List of messages and XML documents used within this BPEL process  -->
    <!-- ================================================================= -->         
    <bpel:variables>
        <!-- Reference to the message passed as input during initiation -->
        <bpel:variable name="request"
                  messageType="ns1:approve"/>
                  
        <!-- 
          Reference to the message that will be returned to the requester
          -->
        <bpel:variable name="approvalInfo"
                  messageType="ns1:approveResponse"/>
    </bpel:variables>

    <!-- ================================================================= -->         
    <!-- ORCHESTRATION LOGIC                                               -->
    <!-- Set of activities coordinating the flow of messages across the    -->
    <!-- services integrated within this business process                  -->
    <!-- ================================================================= -->         
    <bpel:sequence name="main">
        
        <!-- Receive input from requester. 
             Note: This maps to operation defined in SimpleHomeLoan.wsdl 
             -->
        <bpel:receive name="receiveInput" partnerLink="client"
                 portType="ns1:loanApprovalPT"
                 operation="approve" createInstance="yes" variable="request"
                />
        

        <!-- Generate reply to synchronous request -->
        <bpel:invoke name="Invoke" partnerLink="approver"
        portType="ns1:loanApprovalPT"
        operation="approve" inputVariable="request"
        outputVariable="approvalInfo"></bpel:invoke>
        <bpel:reply name="replyOutput" 
               partnerLink="client"
               portType="ns1:loanApprovalPT"
               operation="approve" 
               variable="approvalInfo"
               />
    </bpel:sequence>
</bpel:process>

